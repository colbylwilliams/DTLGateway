{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "utcValue": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }
    },
    "variables": {
        "signCertScriptUri": "https://raw.githubusercontent.com/colbylwilliams/DTLGateway/main/scripts/Az-CreateSigningCertificate.ps1",
        "keyVaultName": "[concat('a', uniqueString(resourceGroup().id), '-kv')]",
        "keyVaultSecretSignCertificate": "SignCertificate",
        "deploymentScriptRunner": "DeploymentScriptRunner"
    },
    "resources": [
        {
            "name": "[variables('deploymentScriptRunner')]",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "apiVersion": "2018-11-30",
            "location": "[resourceGroup().location]"
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "createSignCertificateScript",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('deploymentScriptRunner'))]": { /*ttk bug*/
                    }
                }
            },
            "dependsOn": [
                // "[variables('roleDefinitionName')]",
                "[variables('deploymentScriptRunner')]",
                "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
            ],
            "properties": {
                "forceUpdateTag": "[parameters('utcValue')]",
                "azPowerShellVersion": "5.4",
                "timeout": "PT1H",
                "arguments": "[format(' -vaultName {0}', variables('keyVaultName'))]",
                "primaryScriptUri": "[variables('signCertScriptUri')]",
                "cleanupPreference": "Always",
                "retentionInterval": "P1D"
            }
        },
        {
            "name": "[variables('keyVaultName')]",
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('deploymentScriptRunner')]"
                // "[variables('roleDefinitionName')]"
            ],
            "properties": {
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": false,
                "enabledForVolumeEncryption": false,
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                        "tenantId": "[reference(variables('deploymentScriptRunner'), '2018-11-30').tenantId]",
                        "objectId": "[reference(variables('deploymentScriptRunner'), '2018-11-30').principalId]",
                        "permissions": {
                            "keys": [
                                "get",
                                "create",
                                "list",
                                "update"
                            ],
                            "secrets": [
                                "get",
                                "list",
                                "set"
                            ],
                            "certificates": [
                                "get",
                                "list",
                                "create",
                                "update"
                            ],
                            "storage": []
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(variables('keyVaultName'), '/', variables('keyVaultSecretSignCertificate'))]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "createSignCertificateScript"
            ],
            "properties": {
                "value": "[base64(concat('{ \"data\":\"', reference('createSignCertificateScript').outputs.base64, '\", \"dataType\":\"pfx\", \"password\":\"', reference('createSignCertificateScript').outputs.password, '\" }'))]"
            }
        }
    ]
}
